
<div class="d-flex justify-content-between align-items-center bg-light mb-3"><h1>simple airbnb</h1> <%= link_to "add flat", new_flat_path, class:"btn btn-primary" %></div>
<div class="card_grid">
  <% @flats.each do |flat| %>
  <div class="card " style="width: 18rem;">
    <div class="card-body ">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.description %></p>
      <%= link_to "check it out", flat_path(flat), class:"card-link" %>
      <%= link_to "edit this flat", edit_flat_path(flat), class:"card-link" %>
      <%= button_to "delete this flat", flats_path, class:"card-link", method: :destroy %>
    </div>
  </div>
  <% end %>
</div>
