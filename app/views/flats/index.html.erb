
<div class="d-flex justify-content-between align-items-center bg-light mb-3 container p-6"><h1>simple airbnb</h1> <%= link_to "add flat", new_flat_path, class:"btn btn-primary" %></div>
<div class="card_grid">
  <% @flats.each do |flat| %>
  <div class="card " style="width: 18rem;">
    <div class="card-body ">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text"><%= flat.address %></p>
    <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
    <i class="fas fa-user"></i> <%= flat.number_of_guests %>
    <hr>
      <%= link_to "more info", flat_path(flat), class:"card-link" %>
      <%= link_to "edit", edit_flat_path(flat), class:"card-link" %>
      <%= link_to "remove", flat_path(flat), class:"card-link", method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end %>
</div>
